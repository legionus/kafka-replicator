#!/usr/bin/make -f

.EXPORT_ALL_VARIABLES:

PROJECT = kafka-replicator
PROJECT_URL = github.com/legionus/$(PROJECT)
PROJECT_DIR = $(dir $(PROJECT_URL))

SYSCONF_DIR = /etc
CONFIG_SUFFIX =

DEBIAN_DIR = $(CURDIR)/debian
GOPATH = $(CURDIR)/Godeps/_workspace

%:
	dh $@

# without-configs #override_dh_installdeb:
# without-configs #	dh_installdeb
# without-configs #	: > $(DEBIAN_DIR)/$(PROJECT)/DEBIAN/conffiles

override_dh_auto_configure:
	mkdir -p -- $(GOPATH)/src/$(PROJECT_DIR)
	cd $(GOPATH)/src/$(PROJECT_DIR); ln -sf $(CURDIR) $(PROJECT)

override_dh_auto_build:
	cd $(GOPATH)/src/$(PROJECT_URL); go get ./...

install_bin:
	install -D -m 755 $(GOPATH)/bin/kafka-replicator $(DEBIAN_DIR)/$(PROJECT)/usr/sbin/kafka-replicator

install_conf:
	install -D -m 644 $(DEBIAN_DIR)/kafka-replicator.init $(DEBIAN_DIR)/$(PROJECT)/etc/init/kafka-replicator.conf
	install -D -m 644 $(CURDIR)/contrib/logrotate/kafka-replicator $(DEBIAN_DIR)/$(PROJECT)/etc/logrotate.d/kafka-replicator
	install -D -m 644 $(CURDIR)/kafka-replicator.cfg $(DEBIAN_DIR)/$(PROJECT)/$(SYSCONF_DIR)/kafka-replicator.cfg$(CONFIG_SUFFIX)

override_dh_install: install_bin install_conf
